@import nib

@import colors
@import media-query-variables
@import "checkmark"

ul.sites-list
  list-style none
  padding 0
  margin 0

  li
    display block
    position relative
    height 4.5em

    &:not(:last-child)
      margin-bottom 2em

      &:after
        content ""
        pointer-events none
        position absolute
        display block
        background lighterLineGray
        height .0625em
        top 100%
        width 100%
        margin-top 1em

    .info
      position absolute
      left 0
      right 8em

    .title
      overflow ellipsis
      font-size 1.25em
      line-height 1
      margin-top 0
      margin-bottom .5em

      a
        color inherit
        text-decoration none

        &:hover
          color brandPink

    .embed
      font-size .8125em

      .copyable-code-wrapper
        max-width 100%

      .embed-code
        width 33.5em
        max-width 100%
        padding-top .55em

    .actions
      position absolute
      right 0
      top 0
      width 9em

      a.button.small-action-button
        margin-bottom .25em
        float right
        clear right
        text-decoration none

    @media iPhoneMaxWidthQuery
      height auto

      .info, .actions
        position static

      .actions
        width auto
        padding-top .5em

        a.button.small-action-button
          margin-bottom 0
          margin-right .5em
          float none
