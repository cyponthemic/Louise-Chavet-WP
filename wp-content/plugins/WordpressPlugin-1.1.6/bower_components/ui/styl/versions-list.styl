@import nib

@import colors
@import media-query-variables
@import "checkmark"

ul.versions-list
  list-style none
  padding 0
  margin 0

  li
    display block
    position relative
    margin-bottom .125em

    &:last-child
      margin-bottom 0

    .tag
      user-select none
      display block
      cursor pointer
      padding .6em

      .icon
        font-size 12px
        vertical-align middle

        &.down-arrow-icon
          margin .5em .75em 0 .25em

        &.right-arrow-icon
          margin 0 .75em .25em .25em

      .actions
        float right

        .imported-label
          display inline-block
          color subtleText
          font-size .8em
          margin-right 1em

          &.imported
            margin-right 0

            &:before
              content ""
              display inline-block
              vertical-align middle
              height 1em
              width 1em
              checkmark subtleText
              background-repeat no-repeat
              background-position .105em .0625em
              background-size .8em .8em
              margin-right .125em

    .body
      padding .6em

      > .input > p:first-child
        margin-top 0

      > *:last-child
        margin-bottom 0

    &[collapsed="true"]

      .tag
        background #fff

        .right-arrow-icon
          opacity .2

        .down-arrow-icon
          display none

        &:hover
          background lighterGray

      .body
        display none

    &[collapsed="false"]
      box-shadow -.0625em 0 brandPink

      .tag
        background lighterGray

        .down-arrow-icon
          opacity 1

        .right-arrow-icon
          display none

      .body
        background #fff
