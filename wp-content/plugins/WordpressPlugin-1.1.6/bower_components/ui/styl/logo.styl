@import nib

@import media-query-variables

logoWidth = 13em
logoHeight = 5.3em

.logo svg
  display block
  width logoWidth
  height logoHeight
  margin-left auto
  margin-right auto
  max-width 100%

logo
  position relative
  display inline-block

  @media firefoxOnlyQuery
    display block

  @media ie10And11Query
    display block

@media ie10And11Query
  .top-bar logo
    height 1.75rem

.logo-link
  display inline-block
  width logoWidth
  height logoHeight

  .logo

    &, & svg
      width 100%
      height 100%

  &, &:hover
    text-decoration none

  html[data-state-changing="true"] &.animate-during-state-change
    path
      fill none
      stroke-width 2em
      stroke-dasharray 1000
      -webkit-animation logo-path-animation 700ms linear forwards infinite
      stroke #444

@keyframes logo-path-animation
  from
    stroke-dashoffset 0
  to
    stroke-dashoffset -2000
