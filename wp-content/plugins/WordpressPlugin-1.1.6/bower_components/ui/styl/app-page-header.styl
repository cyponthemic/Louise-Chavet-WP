@import nib

@import colors
@import sizes
@import media-query-variables

.app-page-header
  padding-top 3em
  padding-bottom 1.5em
  box-shadow 0 .0625em rgba(0, 0, 0, .21)

  @media pageWithAppNavigationMinWidthQuery
    position fixed
    width centeredPageWidth - 2em
    top 0
    background #fff
    z-index 5

  .app-page-header-inner
    position relative

    .breadcrumb
      position absolute
      bottom 100%
      left 0
      margin-bottom .5em
      color inherit
      opacity .5
      text-transform uppercase
      letter-spacing .05em
      font-size .8em
      white-space nowrap
      max-width 100%
      overflow hidden

      &:hover
        opacity 1
        color brandPink

      .left-arrow-icon
        margin-left -.5em
        margin-right .5em
        font-size .75em

    h1
      font-weight normal
      font-size 1.33em
      margin 0

    &.with-actions h1
      margin-right 6em

    .app-page-header-search
      position absolute
      top -.0625em
      left 0
      right 0
      margin-left auto
      margin-right auto
      width 16em

      input[type="search"]
        border 1px solid transparent
        background lightGray
        text-align center
        border-radius 2em
        padding .25em .5em
        outline none

        &:focus
          border-color brandPink
          outline none
          background #fff
          box-shadow 0 0 .0625em brandPink

      @media mobileMaxWidthQuery
        width auto
        position static
        margin-top 1em

    .app-page-header-actions
      position absolute
      top 0
      right 0
      text-align right

      button
        margin-top -.125em
        font-size .8em
        text-transform uppercase
        letter-spacing .2em
        text-indent .2em

      a.action-link
        cursor pointer
        font-size .8em
        text-transform uppercase
        letter-spacing .06em
        text-indent .06em
        text-decoration none

        .icon
          position relative
          top .25em

          &.add-icon
            margin-left 1em

          &.edit-icon
            margin-left .75em

      .small-page-header-checkbox-label
        cursor pointer
        vertical-align middle

        span
          font-size .8em
          padding-right .5em
