@import nib

@import fonts
@import "font-smoothing"
@import media-query-variables

.dialog .onboarding-dialog

  h2
    antialiasedFonts()
    font-family serifFonts
    font-size 1.35em

  .register-step

    footer.hero.registration-form-section
      padding-left 0
      padding-right 0

    .register-form-inputs-outer
      padding 1.75em 1em 1em
      margin-bottom 1.5em
      background rgba(#000, .075)

      .register-form-inputs-inner
        width 26em
        max-width 100%
        margin-left auto
        margin-right auto

    p
      width 30em
      max-width 90%
      margin-left auto
      margin-right auto

    p.message.error

      margin-bottom 1em

      &:last-child
        margin-bottom 0

      + p.message.error
        margin-top -.5em

    p.subtle
      font-size .9em
      color #666

      @media iPhoneMaxWidthQuery
        font-size .75em

    button.primary + p.subtle
      margin-top 2em

  .done-step

    .done-step-buttons-group

      .button

        @media largerThanIphoneMinWidthQuery
          margin-right 1em

          &:last-child
            margin-right 0

        @media iPhoneMaxWidthQuery
          display block
          margin-bottom 1em

          &:last-child
            margin-bottom 0
