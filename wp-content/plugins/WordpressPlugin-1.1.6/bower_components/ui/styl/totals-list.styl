@import nib

@import colors
@import media-query-variables

ul.totals-list
  display block
  list-style none
  padding 0

  > li
    display inline
    margin 0
    padding 0

    > a
      display inline-block
      border 1px solid transparent
      color inherit
      text-decoration none
      padding 1em .25em
      background lightGray
      text-align center
      margin-right 1em
      border-radius .1875em

      &:link
        cursor pointer

      @media iPhoneMaxWidthQuery
        display block
        margin 0 0 1em

      &.active
        background #fff
        border-color brandPink

    &:last-child > a
      margin-right 0 !important

    .total
      font-size 1.25em
      margin-bottom .125em
      line-height 1

    .label
      line-height 1

  &.three > li > a
    width 32%
    margin-right 2%

    @media iPhoneMaxWidthQuery
      width auto
